
<div class="recent-post">
<h3>Recent Posts</h3>
  {% for article in blogs.news.articles limit: 5 %}
<ul>

  <li class="img">  {% assign src = article.content | split: 'src="' %}
              {% assign src = src[1] | split: '"' | first | replace: '//cdn', 'http://cdn'; | replace: 'http:http://';, 'http://'; | remove: 'https:' %}
              <a href="{{ article.url }}" ><img src="{{ src }}"/></a></li>  
<li class="blog-title"><a href="{{ article.url }}">{{ article.title }}</a> <span>{{ article.created_at | date: "%d.%m.%Y" }}</span></li>

</ul>
{% endfor %}  
</div> 