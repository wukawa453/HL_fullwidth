{% assign slide1 = 'slide_1_image.jpg' %}
{% assign slide2 = 'slide_2_image.jpg' %}
{% assign slide3 = 'slide_3_image.jpg' %}
{% assign slide4 = 'slide_4_image.jpg' %}
{% assign slide5 = 'slide_5_image.jpg' %}

{% if settings.slide1_toggle or settings.slide2_toggle or settings.slide3_toggle or settings.slide4_toggle or settings.slide5_toggle %}
<div id="slider">

    {% if settings.slide1_toggle %}
        {% if settings.slide_1_link %}<a href="{{ settings.slide_1_link }}">{% endif %}
          <img src="{{ slide1 | asset_url }}" title="#htmlcaption-1" />
        {% if settings.slide_1_link %}</a>{% endif %}
    {% endif %}

    {% if settings.slide2_toggle %}
        {% if settings.slide_2_link %}<a href="{{ settings.slide_2_link }}">{% endif %}
          <img src="{{ slide2 | asset_url }}" title="#htmlcaption-2" />
        {% if settings.slide_2_link %}</a>{% endif %}
    {% endif %}

    {% if settings.slide3_toggle %}
        {% if settings.slide_3_link %}<a href="{{ settings.slide_3_link }}">{% endif %}
          <img src="{{ slide3 | asset_url }}" title="#htmlcaption-3" />
        {% if settings.slide_3_link %}</a>{% endif %}
    {% endif %}
  
  
    {% if settings.slide4_toggle %}
        {% if settings.slide_4_link %}<a href="{{ settings.slide_4_link }}">{% endif %}
          <img src="{{ slide4 | asset_url }}" title="#htmlcaption-4" />
        {% if settings.slide_4_link %}</a>{% endif %}
    {% endif %}
  
  
    {% if settings.slide5_toggle %}
        {% if settings.slide_5_link %}<a href="{{ settings.slide_5_link }}">{% endif %}
          <img src="{{ slide5 | asset_url }}" title="#htmlcaption-5" />
        {% if settings.slide_5_link %}</a>{% endif %}
    {% endif %}

</div>

<div id="slider_wrap" class="container">
  <div class="row">
    <div class="col-lg-12 col-sm-12 col-md-12">

    </div>
  
    </div>
</div>
{% endif %}

<div class="caption_hidden">

<div id="htmlcaption-1">
    <div class="caption_title caption_title-1">
      <div class="caption_content caption_content-1">
        <h3>{{ settings.slide_1_caption_line2 }}</h3>
      </div>
    </div>

</div>

<div id="htmlcaption-2">
    <div class="caption_title caption_title-2">
      <div class="caption_content caption_content-2">
        <h3>{{ settings.slide_2_caption_line2 }}</h3>
      </div>
    </div>
    
</div>

<div id="htmlcaption-3">
    <div class="caption_title caption_title-3">
       <div class="caption_content caption_content-3">
        <h3>{{ settings.slide_3_caption_line2 }}</h3>
      </div>
    </div>
    
</div>

<div id="htmlcaption-4">
    <div class="caption_title caption_title-4">
       <div class="caption_content caption_content-4">
        <h3>{{ settings.slide_4_caption_line2 }}</h3>
      </div>
    </div>
    
</div>
  
<div id="htmlcaption-5">
    <div class="caption_title caption_title-5">
       <div class="caption_content caption_content-5">
        <h3>{{ settings.slide_5_caption_line2 }}</h3>
      </div>
    </div>
    
</div>
  
</div>

<script type="text/javascript">
$(window).load(function() {
    $('#slider').nivoSlider({
        effect:'fade',
        animSpeed:500,
        pauseTime:7000,
        startSlide:0,
        directionNav:true,
        directionNavHide:false,
        controlNav:true,
        pauseOnHover:true
    });
});
</script>