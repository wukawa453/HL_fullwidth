<div id="breadcrumb">
  <ul class="breadcrumb">
    <li><a href="/" class="homepage-link" title="Back to the frontpage">Home</a><span class="divider">&rarr;</span></li>
    {% if template contains "product" %}
      {% if collection %}            
        {% if collection.handle %}
           <li>{% capture url %}/collections/{{ collection.handle }}{% endcapture %}
           {{ collection.title | link_to: url }} <span class="divider">&rarr;</span></li>
        {% elsif collection.all_products_count > 0 and collection.products.first.type == collection.title %}
           <li>{{ collection.title | link_to_type }} <span class="divider">&rarr;</span></li>
        {% elsif collection.all_products_count > 0 and collection.products.first.vendor == collection.title %}
           <li>{{ collection.title | link_to_vendor }} <span class="divider">&rarr;</span></li>
        {% endif %}
      {% else %}
        {{ product.type | link_to_type }}        
      {% endif %}
       <span class="page-title">{{ page_title }}</span>
    {% elsif template == "article" %}
        <li>{{ blog.title | link_to: blog.url }} <span class="divider">&rarr;</span></li>
        <li><span class="page-title">{{ page_title }}</span></li>
    {% elsif template contains "collection" %}
        {% if current_tags.size > 0 %}
          <li>{{ collection.title | link_to: collection.url }} <span class="divider">&rarr;</span></li>
          <li><span class="page-title">{{ current_tags.first }}</span></li>
        {% else %}
          <li><span class="page-title">{{ page_title }}</span></li>
        {% endif %}
    {% else %}
        <li><span class="page-title">{{ page_title }}</span></li>
    {% endif %}
  </ul>
</div>